{{#if details}}
  {{#each details.results as |item index|}}
    <div class="result">
      <ul class="nav nav-tabs">
        <li class="nav-item">
          <a
            {{action "showTable" index}}
            class="nav-link {{if item.showTable 'active'}}"
            href="#"
          >Table</a>
        </li>
        <li class="nav-item">
          <a
            {{action "showJson" index}}
            class="nav-link {{if item.showJson 'active'}}"
            href="#"
          >JSON</a>
        </li>
      </ul>

      {{#if item.showTable}}
        <div class="tab-container fields-table">
          {{object-to-table item}}
        </div>
      {{/if}}

      {{#if item.showJson}}
        <div class="tab-container json-block">
          <pre>{{{item.json}}}</pre>
        </div>
      {{/if}}
    </div>
  {{/each}}
{{/if}}